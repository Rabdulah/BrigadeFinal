{{#if isEditing}}

<div class="ui fluid raised very padded text container segment">
    <form class="ui form">
        <div class="sixteen wide field">
            {{input type="text" value = name placeholder = "Name of Assessment Test"}}
        </div>
        <div class="sixteen wide field">
            {{input type="text" value = description placeholder = "Description of Assessment Test"}}
        </div>
        {{!-- <div class="sixteen wide field">
            {{input type="text" value = fAuthor placeholder = "Form author"}}
        </div> --}}

        <br><br>

        <div class="ui centered grid">
            <button class="ui fluid positive button" {{action "submit"}}>Submit</button>
            <button class="ui fluid negative button" {{action "cancel"}}>Cancel</button>
        </div>

    </form>
</div>

{{else}}
    <button class="ui button" {{action "addForm"}}>
        Add Assessment Test
    </button>
{{/if}}