<link integrity="" rel="stylesheet" href="{{rootURL}}assets/css/form-style.css"> <!-- Resource style -->

<form class="cd-form floating-labels" {{action "save" on="submit"}}>
  <br><br>
  <fieldset>
    <legend>Book Appointment</legend>

    <div class="icon">
      <label class="cd-label">Reason</label>
      {{input class="star" type="text" value = Reason}}
    </div>
    <div class="icon">
      <label class="cd-label">Other</label>
      {{input  class="user" type="text" value = Other}}
    </div>

    <div class="icon">
      <label class="cd-label">Date</label>
      <input class="date" type="date" value={{selectedDate}}  onchange={{action 'assignDate' value="target.value"}}>
    </div>

    <div>
      <div class="cd-button">
        <input type="submit" value="Submit">
      </div>
    </div>
  </fieldset>
</form>