<form class="cd-form floating-labels" {{action "save" on="submit"}}>
  <br><br>
  <fieldset>
    <legend>Book Appointment</legend>


    <label class="cd-label">Select Physiotherapist</label>
    <p class="cd-select icon">
      <select class="people" value ={{selectphysio}} onchange={{action "updateValue" value="target.value"}} >
        <option value=""  selected disabled hidden>Select Physiotherapist</option>
        {{#each getphysio as |phsio|}}
          <option value={{phsio.id}}>
            {{phsio.givenName}}
          </option>
        {{/each}}
      </select>
    </p>

    <div>
      <div class="cd-button">
        <input type="submit" value="Submit">
      </div>

      <button class="ui fluid negative button" {{action "cancelbookingappointment"}}>Cancel</button>
    </div>
  </fieldset>

</form>

{{as-calendar
  title="Ember Calendar"
  occurrences=occurrences
  defaultTimeZoneQuery="Toronto|New York"
  dayStartingTime="9:00"
  dayEndingTime="18:00"
  timeSlotDuration="00:30"
  onAddOccurrence=(action "calendarAddOccurrence")
  onUpdateOccurrence=(action "calendarUpdateOccurrence")
  onRemoveOccurrence=(action "calendarRemoveOccurrence")}}



{{#ui-modal name= modalName class= modalName}}
  <form class="cd-form floating-labels" {{action "saveappointment" on="submit"}}>
    <br><br>
    <fieldset>
      <legend>Book Appointment</legend>
      <label class="cd-label"> Physiotherapist</label>
      <p>{{phyidget.familyName}} {{phyidget.givenName}}</p>


      <div class="icon">
        <label class="cd-label">Reason</label>
        {{input class="star" type="text" value = Reason}}
      </div>
      <div class="icon">
        <label class="cd-label">Other</label>
        {{input  class="user" type="text" value = Other}}
      </div>

      <div class="icon">
        <label class="cd-label">Date</label>
        <p>{{selectedappointment.fulldate}}</p>
      </div>

      <div>
        <div class="cd-button">
          <input type="submit" value="Submit">
        </div>

        <button class="ui fluid negative button" >Cancel</button>
      </div>
    </fieldset>

  </form>
{{/ui-modal}}
