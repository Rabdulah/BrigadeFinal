<button class="ui mini circular labeled icon green button" {{action 'openModal'}} {{action 'isMultipleChoice'}}
        title="Edit"><i class="edit icon"></i>
        Edit
</button>


{{#ui-modal name= modalName class= modalName}}
  <div class="content">
    <div class="ui form">
 
      <div class="field">
        <label>Question </label>
        {{input type="text" cols="50" rows="1" value=questionData.questionText}}
      </div>

      <div class="field">
        <label>Help Description</label>
        {{textarea cols="50" rows="1" value=questionData.helpDescription}}
      </div>

      {{#if multipleChoice}}
        <div class="field">
          <label>Option 1</label>
          {{textarea cols="50" rows="1" value=questionData.helpDescription}}
        </div>

        {{#if opt2}}
          <div class="field">
            <label>Option 2</label>
            {{textarea cols="50" rows="1" value=questionData.helpDescription}}
          </div>
        {{/if}}

        {{#if opt3}}
          <div class="field">
            <label>Option 3</label>
            {{textarea cols="50" rows="1" value=questionData.helpDescription}}
          </div>
        {{/if}}

        {{#if opt4}}
          <div class="field">
            <label>Option 4</label>
            {{textarea cols="50" rows="1" value=questionData.helpDescription}}
          </div>
        {{/if}}

        {{#if opt5}}
          <div class="field">
            <label>Option 5</label>
            {{textarea cols="50" rows="1" value=questionData.helpDescription}}
          </div>
        {{/if}}

        {{#if opt6}}
          <div class="field">
            <label>Option 6</label>
            {{textarea cols="50" rows="1" value=questionData.helpDescription}}
          </div>
        {{/if}}

      {{/if}}
    </div>
  </div>

  <br>
  <div class="actions">
    <div class="ui right floated red deny button">
      Cancel
    </div>
    <div class="ui positive right labeled icon button">
      Save
      <i class="checkmark icon"></i>
    </div>
  </div>
  <br><br>
{{/ui-modal}}