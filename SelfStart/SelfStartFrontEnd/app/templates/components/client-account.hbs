            {{input type ="text" value=FName placeholder="Family Name"}}
        </div>
        
        <div class="field">
            <label>Given Name</label>
            {{input type ="text" value=credentials.GName placeholder="Email"}}
        </div>

        <div class="field">
            <label>Email</label>
            {{input type ="text" value=Email placeholder="Email"}}
        </div>

        <div class="field">
            <label>Date Of Birth</label>
            {{input type ="text" value=DOB placeholder="Date of Birth"}}
        </div>

        <div class="field">
            <label>Phone Number</label>
            {{input type ="text" value=phoneNumber placeholder="Phone Number"}}
        </div>

        <div class="field">
            <label>Frequency</label>
            {{input type ="text" value=Frequency placeholder="Frequency"}}
        </div>

        <div class="field">
            <label>Health Card Number</label>
            {{input type ="text" value=HCN placeholder="Health Card Number"}}
        </div>

        <div class="field">
            <label>Occupation</label>
            {{input type ="text" value=Occupation placeholder="Occupation"}}
        </div>

        <div class="field">
            <label>Marital Status</label>
            {{input type ="text" value=MaritalStatus placeholder="Marital Status"}}
        </div>

        <div class="field">
            <label>Gender</label>
            {{input type ="text" value=MaritalStatus placeholder="Marital Status"}}
        </div>

        <div class="field">
            <label>Country</label>
            {{input type ="text" value=Country placeholder="Country"}}
        </div>

        <div class="field">
            <label>City</label>
            {{input type ="text" value=City placeholder="City"}}
        </div>

        <div class="field">
            <label>Province</label>
            {{input type ="text" value=Province placeholder="Province"}}
        </div>

        <div class="field">
            <label>Appartment</label>
