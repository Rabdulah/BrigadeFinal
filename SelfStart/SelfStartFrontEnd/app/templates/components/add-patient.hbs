<div class="title">
  Add New Client

  <div class="container" style="float: right;">
    {{#link-to 'patients'}}
      <a id="add" class="round-remove-button">
        <i class="remove icon"></i>
      </a>
    {{/link-to}}
  </div>
</div>


<link integrity="" rel="stylesheet" href="{{rootURL}}assets/css/form-style.css"> <!-- Resource style -->

<form class="cd-form floating-labels" {{action "save" on="submit"}}>
  <fieldset>
    <legend>Account Settings</legend>
    <div class="icon">
      <label class="cd-label">Account Name</label>
      {{input class="user" type="text" value = userAccountName required = true}}
    </div>
    <div class="icon">
      <label class="cd-label">Temporary Password</label>
      {{input class="lock" type="text" value = encryptedPassword required = true}}
    </div>
  </fieldset>

  <fieldset>
    <legend>Personal Info</legend>

    <div class="icon">
      <label class="cd-label">First Name</label>
      {{input class="user" type="text" value = givenName required = true}}
    </div>
    <div class="icon">
      <label class="cd-label">Last Name</label>
      {{input class="user" type="text" value = familyName required = true}}
    </div>
    <div class="icon">
      <label class="cd-label">Date of Birth</label>
      <input class="date" type="date" value={{selectedDate}}  onchange={{action 'assignDate' value="target.value"}} required>
    </div>

    <div >
      <h4>Gender</h4>
      <p class="cd-select icon">
        <select class="people" onchange={{action 'selectGender' value="target.value"}} required=true>
          <option selected="selected">
            Select Gender
          </option>
          {{#each genderModel as |oneGender|}}
            <option value={{oneGender.name}} selected={{eq gender oneGender.name}}>
              {{oneGender.name}}
            </option>
          {{/each}}
        </select>
      </p>
    </div>


    <div class="icon">
      <label class="cd-label">Health Card Number</label>
      {{input class="card" type="text" value = healthCardNumber required = true}}
    </div>
  </fieldset>


  <fieldset>
    <legend>Address</legend>

    <div class="icon">
      <label class="cd-label">Number</label>
      {{input class="home" type="text" value = streetNumber required = true}}
    </div>
    <div class="icon">
      <label class="cd-label">Street Name</label>
      {{input class="home" type="text" value = streetName required = true}}
    </div>
    <div class="icon">
      <label class="cd-label" for="cd-name">Unit</label>
      {{input class="bookmark" type="text" value = apartment}}
    </div>

    <div class="icon">
      <label class="cd-label" for="cd-name">Postal/ZIP Code</label>
      {{input class="flag" type="text" value = postalCode required = true}}
    </div>


    <div >
      <h4>Country</h4>
      <p class="cd-select icon">
        <select class="world" onchange={{action 'selectCountry' value="target.value"}} required=true>
          <option selected="selected">
            Select Country
          </option>
          {{#each conutryModel as |oneCountry|}}
            <option value={{oneCountry.name}} selected={{eq country oneCountry.name}}>
              {{oneCountry.name}}
            </option>
          {{/each}}
        </select>
      </p>
    </div>

  </fieldset>


  <fieldset>
    <legend>Contact Info</legend>

    <div class="icon">
      <label class="cd-label" for="cd-name">Phone Number</label>
      {{input class="phone" type="text" value = phoneNumber required = true}}
    </div>

    <div class="icon">
      <label class="cd-label" for="cd-email">Email</label>
      {{input class="email" type="email" value = email required = true}}
    </div>

    <div class="cd-button">
      <input type="submit" value="Submit">
    </div>
  </fieldset>

</form>