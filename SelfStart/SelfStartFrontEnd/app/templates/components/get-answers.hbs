
<div class="ui form">
  <br>
  {{#if question.sa}}
    <label>{{question.questionText}}</label>
    <br><br>
    <div class="ui input focus">
      <li>{{input type="text" value=SAanswer focus-out="saSave"}}</li>
    </div>
  {{/if}}

  {{#if question.ra}}
    <label>{{question.questionText}}</label>
    <br><br>
    {{ui-rating
      class="heart"
      maxRating=10
      onRate=(action "ratingSave" rateValue=value)
    }}
  {{/if}}

  {{#if question.tf}}
    <br><br>
    <li>
      <div class="inline fields">
        <label>{{question.questionText}}</label>
        <div class="field">
          {{ui-radio name="tf" label="True" value="True" current=tf onChange=(action "TFtrue")}}

        </div>
        <div class="field">
          {{ui-radio name="tf" label="False" value="False" current=tf onChange=(action "TFfalse")}}
        </div>
      </div>
    </li>
  {{/if}}

  {{#if question.mc}}
    <br><br>
    <div class="grouped fields">
      <label>{{question.questionText}}</label>
      <div class="field">
        <div class="ui radio checkbox" value=mcop2>
          <input name="mc" type="radio" onchange={{action 'mcop1Save'}}>
          <label>{{mc-display question.optionString 0}}</label>
        </div>
      </div>
      <div class="field">
        <div class="ui radio checkbox">
          <input name="mc" type="radio" onchange={{action 'mcop2Save'}}>
          <label>{{mc-display question.optionString 1}}</label>
        </div>
      </div>
      <div class="field">
        <div class="ui radio checkbox">
          <input name="mc" type="radio"  onchange={{action 'mcop3Save'}}>
          <label>{{mc-display question.optionString 2}}</label>
        </div>
      </div>
      {{#if (number-of-mc question.optionNumber 3)}}
        <div class="field">
          <div class="ui radio checkbox">
            <input name="mc" type="radio"  onchange={{action 'mcop4Save'}}>
            <label>{{mc-display question.optionString 3}}</label>
          </div>
        </div>
      {{/if}}
      {{#if (number-of-mc question.optionNumber 4)}}
        <div class="field">
          <div class="ui radio checkbox">
            <input name="mc" type="radio"  onchange={{action 'mcop5Save'}}>
            <label>{{mc-display question.optionString 4}}</label>
          </div>
        </div>
      {{/if}}
      {{#if (number-of-mc question.optionNumber 5)}}
        <div class="field">
          <div class="ui radio checkbox">
            <input name="mc" type="radio"  onchange={{action 'mcop6Save'}}>
            <label>{{mc-display question.optionString 5}}</label>
          </div>
        </div>
      {{/if}}
    </div>
  {{/if}}
</div>