<p style="cursor: pointer; " title="Edit"  {{action 'openModal' }}>
  <img src="/assets/images/pencil.svg">
</p>


{{#ui-modal name=modalName class=modalName }}
  <i class="close icon"></i>
  <link integrity="" rel="stylesheet" href="{{rootURL}}../assets/css/form-style.css"> <!-- Resource style -->


  <div class="header">Edit Plan</div>
  <div class="scrolling content" >

  <form id="edit" class="cd-form floating-labels" {{action "submit" on="submit"}}>

    <div class="ui hidden divider"></div>

    <div class="field " style="margin: 1em 0;">
      <label class="cd-label">Rehabilitation Name</label>
      {{input class="star" type="text" value = plansData.planName required = true}}
    </div>



    <div class="field" style="margin: 1em 0;">
      <label class="cd-label">Description</label>
      {{input class="message" type="cd-textarea" value = plansData.description required = true}}
    </div>

    <div class="ui two column grid">
      <div class="column " style="margin: 1em 0;">
        <label class="cd-label">Goal</label>
        {{input  class="award" type="text" value = plansData.goal required = true}}
      </div>


    <div class="column " style="margin: 1em 0;">
      <h4>Exercises</h4>
      <p class="cd-select icon">
        <select class="people" onchange={{action 'selectExercise' value="target.value"}}>
          {{#each exerciseModel as |oneExercise|}}
            <option value={{oneExercise.name}} selected={{eq plansData.exercises oneExercise.name}}>
              {{oneExercise.name}}
            </option>
          {{/each}}
        </select>
      </p>
    </div>
    </div>

    <div class="field">
      <button class="fluid ui blue button" value="submit" style="max-width: 100%; height: 50px;">
        Submit
      </button>
    </div>

  </form>


</div>

{{/ui-modal}}