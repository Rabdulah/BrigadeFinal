<div class="masthead segment bg2">
  <div class="ui container">
    <div class="introduction">
      <h1 class="ui inverted header">
        <span class="library" style="font-size: 1.25em">Upload photo</span>
      </h1>
    </div>
  </div>
</div>
<br>

<div id="content">
  {{add-image}}'

  <table class="ui single line table">
    <thead>
    <tr>
      <th>Image Name</th>
      <th>Image</th>
      <th>Delete</th>
    </tr>
    </thead>

    <tbody>
    {{#each imageList as |Image|}}
      <tr>
        <td>{{Image.name}}</td>
        <td>
          <img class = "ui small image" src="{{Image.imageData}}">
        </td>
        <td>
          <div class="four wide column right aligned">
            {{delete-image ID=Image.id}}
          </div>
        </td>
      </tr>
    {{/each}}
    </tbody>

  </table>

</div>

{{outlet}}

