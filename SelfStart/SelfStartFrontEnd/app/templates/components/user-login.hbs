

<div class="ui hidden divider"></div>
<a id="login" class="item" {{action 'openModal'}}>Log in</a>

{{#ui-modal name="login" class="login"}}
  <link integrity="" rel="stylesheet" href="{{rootURL}}../assets/css/form-style.css"> <!-- Resource style -->

  <h2 class="ui fluid centered header">Login</h2>

  <div id="ui container" style="height: 250px; padding-left:5%; padding-right: 5%; padding-top: 2%">
  <form class="ui form">

    <div class="field">
      <label>Email</label>
      {{input type ="text" value=Email placeholder="Email"}}
    </div>

    <div class="field">
      <label>Password</label>
      {{input type ="password" value=PWord placeholder="Password"}}
    </div>

    <div class = "inline">
      <button class="ui blue button " {{action "submit"}}>Login</button>
    </div>

  </form>
  </div>
{{/ui-modal}}

{{#ui-modal name="changePassword" class="changePassword" }}
  <div class="header">
    Please change your password and login again
  </div>
  <div class="content">
    <div class="ui form">
      <div class="inline field">
        <label>Password</label>
        {{input value=firstPassword type="password" placeholder="enter password"}}
      </div>
      <div class="inline field">
        <label>Reenter Password</label>
        {{input value=secondPassword type="password" placeholder="re-enter password"}}
      </div>
    </div>
  </div>
  
  <div class="actions">
    <div class="ui black deny button">
      Cancel
    </div>
    <div class="ui positive right labeled icon button">
      Save
      <i class="checkmark icon"></i>
    </div>
    <div class="ui center aligned container">
      <p style="color: #ca1010"> {{errorMessage}}</p>
    </div>
  </div>
{{/ui-modal}}

