<div class="masthead segment bg2">
  <div class="ui container">
    <div class="introduction">
      <h1 class="ui inverted header">
        <span class="library" style="font-size: 1.25em">{{model.givenName}} {{model.familyName}}</span>
      </h1>

    </div>
  </div>
</div>


<div class="background" style="padding-left: 2em;padding-right: 15em;padding-top: 10em;">

  <div class="ui vertical pointing menu" style="width: 12rem;">
    <a class="active item">
      Menu Builder
    </a>
    <a class="item">
      Assessment
    </a>
    <a class="item">
      Notes
    </a>
    <a class="item">
      Photos
    </a>
  </div>

  <br><br>

    <div class="ui very padded container segment" id="top" style="margin-top: -18em;z-index:  2;position: relative;margin-left: 200px !important;">
      <div class="ui grid" style="margin-top: -30px;">
        <div class="left thirteen wide column" style="margin-top: -5px;">
          <p style="padding-top: 13px;color:  white;font-size: 1.5em;font-weight: bolder;">
            Menu Builder
          </p>
        </div>
        <div class="right two wide column" style="padding-left: 30px;">
          {{add-rehabplan flagAdd=flagAdd}}
        </div>
      </div>
      <br><br><br><br>


      <div class="ui left aligned seven wide column">
        <div class="ui form" >
          <div class="two fields" >

            <div class="field">
              {{#ui-dropdown class="selection" selected=queryPath onChange=(action (mut queryPath))}}
                <div class="default text">{{modelAttributes.firstObject.name}}</div>
                <i class="dropdown icon"></i>
                <div class="menu">
                  {{#each modelAttributes as |attribute|}}
                    <div class="item" data-value="{{attribute.key}}">
                      {{attribute.name}}
                    </div>
                  {{/each}}
                </div>
              {{/ui-dropdown}}
            </div>

            <div class="field">
              <div class="ui icon input">
                <i class="search icon"></i>
                {{input type="text" placeholder="Search..."  value=query }}
              </div>
            </div>
          </div>
        </div>
      </div>


      <div style="display: inline">
        <table class="ui fixed table" style="border: none;border-color: white;">
          <tbody >
          <tr style="font-weight: bold;">
            <th class="left aligned one wide column "> </th>
            {{#each modelAttributes as |column|}}
              <th class={{column.class}} {{action 'sortColumn' column.key column.dir}}>{{column.name}}
                {{#if (eq column.dir 'asc')}}
                  <i class="sort ascending icon"></i>
                {{/if}}
                {{#if (eq column.dir 'desc')}}
                  <i class="sort descending icon"></i>
                {{/if}}
                {{#if (eq column.dir '')}}
                  <i class="sort icon"></i>
                {{/if}}
              </th>
            {{/each}}
            <th class="center aligned five wide  column">Actions</th>
            <!--<th class="left aligned one wide  column"></th>-->

          </tr>
          </tbody>
        </table>
      </div>

      <div class="ui divider"></div>

      <div  id="myWindow" style="height:500px; overflow-y: scroll; overflow-x: hidden;">
        <table class="ui fixed table" id="tb" style="margin: 0 0;border: none;">
          <tbody >
          {{#each plansModel as |plan|}}

            <tr>

              {{#each modelAttributes as |column|}}


                <td class={{column.class}}>
                  {{get plan column.key}}
                </td>
              {{/each}}

              <td class="right aligned three wide column ">
                  {{assign-rehabplan  plansData=plan model=model}}
              </td>
              <td class="right aligned one wide column ">
                {{edit-rehabplan  plansData=plan }}
              </td>
              <td class="left aligned one wide column ">
                <p>{{delete-rehabplan ID=plan.id flagDelete=flagDelete}}</p>
              </td>
            </tr>
          {{/each}}
          </tbody>
        </table>
      </div>
    </div>

  <br><br><br><br>
</div>