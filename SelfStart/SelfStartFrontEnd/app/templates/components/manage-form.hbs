{{#if edit}}
        <div class="ui fluid raised very padded text container segment">
        <div id='content'>
                <h2> Question List </h2>
                <div class="ui grid">
                {{#each questionsModel as |question|}}   
                        <div class="four wide column">
                        <label>{{question.questionText}}</label>
                        </div>

                        <div class="four wide column">
                        <button {{action "addQuestion" question}}> Add </button>
                        </div>
                {{/each}}
                </div>

                <br><br>

                <div class="ui centered grid">
                <button class="ui fluid positive button" {{action "done"}}>Done</button>
                </div>
        </div>
        </div>
{{else}}
    <button class="ui button" {{action 'manageForm'}}>
        Manage Form
    </button>
{{/if}}