<div id="content">
    {{add-image}}'
    
    <table class="ui single line table">
     <thead>
    <tr>
      <th>Image Name</th>
      <th>Image</th>
      <th>Associated Exercise</th>
      <th>Delete</th>
    </tr>
    </thead>

    <tbody>
      {{#each model as |Image|}}
        <tr>
          <td>{{Image.name}}</td>
          <td>
            <img class = "ui small image" src="{{Image.imageData}}">
          </td>
          <td>
            {{!-- <div class="four wide column right aligned"> --}}
              {{#if Image.exercise}}
                {{Image.exercise.name}}
              {{else}}
                <p>None</p>
              {{/if}}
            {{!-- </div> --}}
          </td>
          <td>
            <div class="four wide column right aligned">
              {{delete-image ID=Image.id}}
            </div>
          </td>
        </tr>
      {{/each}}
    </tbody>

  </table>

</div>

{{outlet}}